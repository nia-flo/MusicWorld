@model MusicWorld.Models.Song.SongSearchViewModel

@{
    ViewData["Title"] = "Songs";
}

<h1 class="text-center">Songs</h1>

<div class="col-md-5 mx-auto">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form asp-action="Search" asp-controller="Song" method="post">
                <div class="form-group">
                    @*<label asp-for="NameToSearch" class="control-label"></label>*@
                    <input asp-for="NameToSearch" class="form-control" />
                    <span asp-validation-for="NameToSearch" class="text-danger"></span>
                </div>

                <div class="d-flex">
                    <div class="align-self-center mx-auto">
                        <div class="form-group col-md-1">
                            <input type="submit" value="Search" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <a>Name</a>
            </th>
            <th>
                <a>Duration</a>
            </th>
            <th>
                <a>Artist</a>
            </th>
            <th>
                <a>Album</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Songs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Album.Name)
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="Catalog" asp-action="AddSong" asp-route-id="@item.Id">Add to playlist</a>
                </td>
            </tr>
        }
    </tbody>
</table>
