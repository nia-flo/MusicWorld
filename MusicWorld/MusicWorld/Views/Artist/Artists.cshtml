@model IEnumerable<MusicWorld.Models.Artist.ArtistViewModel>

@{
    ViewData["Title"] = "Artists";
}

<h1 class="text-center">Artists</h1>

<p>
    <a class="btn btn-primary" asp-controller="Artist" asp-action="Create">New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Photo)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Photo)*@
                    @*<img src="@item.Photo" alt="Photo" />*@
                    <img src="@item.Photo" alt="Photo" class="img-thumbnail w-100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="Artist" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-outline-dark" asp-controller="Artist" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-outline-danger" asp-controller="Artist" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
